{
  "nexus": {
    "endpoint": "https://nexusassistant.azurewebsites.net/api",
    "apiKey": "your-function-key-here"
  },
  "agents": {
    "agent1": {
      "workspace": "/path/to/workspace",
      "sessionsDir": "/path/to/sessions"
    }
  },
  "jobs": [
    {
      "id": "session-upload",
      "type": "session_upload",
      "enabled": true,
      "intervalMinutes": 60,
      "config": {
        "agents": ["agent1"]
      }
    }
  ]
}
